{
    "compilerOptions": {
        "target": "es6",
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "rootDir": "js",
        "outDir": "built",
        "sourceMap": true
    },
    "include": [
        "js/**/*"
    ],
    "exclude": [ //不包含的编译目录
        "node_modules",
        "built"
    ],
    "compileOnSave": true
}